/// this flatbuffer scheme described all basic data structure that needs serialization
struct Vec3d {
    x : float64;
    y : float64;
    z : float64;
}

struct BoundingBox {
    p_min : Vec3d;
    p_max : Vec3d;
}

struct Vec4d {
    x : float64;
    y : float64;
    z : float64;
    w : float64;
}

struct Matrix44d {
    idx : [Vec4d:4];
}